@media all and (max-width: 575px) {
	#benefit-statement .desktop-time-btns {
        flex: 1 0 0%;
        width: 70%;
        margin-right: 5px;
        border: none;
    }
    #benefit-statement .submit-btn-wrapper {
        flex: 0 0 auto;
        width: calc(30% - 5px);
    }
    #benefit-statement .submit-btn-wrapper .submit-btn {
        width: 100%;
    }

    #benefit-statement .desktop-time-btns a {
        border: 1px solid rgba(0,0,0,.1) !important;
    }

    #benefit-statement .desktop-time-btns a:not(:last-child) {
        margin-right: 5px;
    }
}


@media all and (min-width: 576px) and (max-width: 767px) {
    #benefit-statement .searching-result .date-selects .label {
        width: 50px;
    }
