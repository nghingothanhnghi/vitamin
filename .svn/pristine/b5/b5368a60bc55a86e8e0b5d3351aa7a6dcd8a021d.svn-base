        margin-left: 65px;
        flex: 1 0 0%;
        width: calc(70% - 65px);
        margin-right: 10px;
        border: none;
    }
    #benefit-statement .submit-btn-wrapper {
        flex: 0 0 auto;
        width: calc(30% - 10px);
    }
    #benefit-statement .submit-btn-wrapper .submit-btn {
        width: 100%;
    }

    #benefit-statement .desktop-time-btns a {
        border: 1px solid rgba(0,0,0,.1) !important;
    }

    #benefit-statement .desktop-time-btns a:not(:last-child) {
        margin-right: 10px;
    }
}



















