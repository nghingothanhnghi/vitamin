.bgr {
    background: #F7FCED;
    padding: 50px;
    position: relative;
    padding-right: 0;
}

.bgr .element-top {
    position: absolute;
    z-index: 0;
    width: 25%;
    left: 0;
    top: 5%;
}

.bgr .element {
    position: absolute;
    z-index: 0;
    width: 25%;
    right: 0;
    bottom: 0;
}

@media all and (max-width: 767px) {
    .bgr {
        padding: 20px;
    }

    .bgr .element {
        display: none;
    }
}

@media all and (min-width: 768px) and (max-width: 991px) {
    .bgr .element {
        right: 10%;
    }
}

.text-content {
    padding-right: 30px;
}

.bgr .content h2 {
    font-weight: 700;
}

.bgr .content h3 {
    color: #858585;
}

.bgr .content .bold-text {
    color: #2A2E46;
    margin-bottom: 20px;
}


.bgr .content .text-p {
    color: #858585;
    margin-bottom: 40px;
    text-align: justify;
}


.bgr .content .primary-btn {
    background:#F68E1E;
    border-radius: 20px;
    width: 150px;
}

.bgr .content .img-story {
    position:relative;
    z-index: 1;
    top: 50px;
    display: flex;
    align-items: end;
    justify-content: end;
}

@media all and (max-width: 575px) {
    .text-content {
        padding-right: 0;
    }
	.bgr .text-content,
    .bgr .content .img-story {
        width: 100%;       
    }

    .bgr .content .img-story {
        top: 20px;
        right: 0;
        max-width: 70%;
        display: block;
        margin: auto;
    }
}

@media all and (min-width: 576px) and (max-width: 767px) {
    .bgr .content .img-story {
        top: 20px;
    }
}


@media (max-width: 991px) {
	#story .main-heading {
		display: none;
	}
	#story.main-body {
		padding: 30px 0;
	}
}


@media (min-width: 992px) {
	#story .main-container {
    padding: 20px 0;
}
}

