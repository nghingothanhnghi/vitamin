.heading {
    background: #F1F5EB;
}

.heading h2.h-small {
    margin-bottom: 0;
}





@media all and (max-width: 991px) {
    .heading {
        padding: 15px 4%;
    }

    .heading h2 {
        display: none;
    }

    .heading .search input {
        width: 100%;
    }
}


@media all and (min-width: 992px) {
    .heading {
        display: flex;
        align-items: center;
        padding: 15px 4%;
        margin-bottom: 10px;
    }

    .heading .search {
        display: flex;
        background: #fff;
        border-radius: 20px;
        padding: 5px 10px 5px 18px;
    }
}




.heading .search {
    display: flex;
    background: #fff;
    border-radius: 20px;
    padding: 5px 10px 5px 18px;
}

.heading .search input {
    border: none;
    background: transparent;
}







@media all and (max-width: 991px) {
    .notice-grid {
        padding: 10px 4% 30px 4%;
    }
}

@media all and (min-width: 992px) {
    .notice-grid {
        margin-bottom: 30px;
    }
}









/*----- Notice Table -----*/




.notices-table th:nth-child(1),
.notices-table td:nth-child(1) {
    width: 50px;
    padding-left: 0;
    padding-right: 0;
}


/* .notices-table th:nth-child(2),*/
.notices-table td:nth-child(2) {
    text-align: left!important;
} 


@media all and (max-width: 575px) {

    .notices-table th:nth-child(2),
    .notices-table td:nth-child(2) {
        padding-left: 10px;
    }
}


@media all and (min-width: 576px) {

    .notices-table th:nth-child(2),
    .notices-table td:nth-child(2) {
        padding-left: 20px;
        padding-right: 20px;
    }
}

.notices-table th:nth-child(3),
.notices-table td:nth-child(3) {
    width: 70px;
    padding-left: 0;
    padding-right: 0;
}

.notices-table th:nth-child(4),
.notices-table td:nth-child(4) {
    width: 110px;
    padding-left: 0;
    padding-right: 0;
}








@media all and (max-width: 575px) {
    .notices-table tr {
        display: flex;
        flex-wrap: wrap;
    }

    .notices-table th:nth-child(1),
    .notices-table td:nth-child(1) {
        width: 50px;
        flex: 0 0 auto;
    }

    .notices-table th:nth-child(2),
    .notices-table td:nth-child(2) {
        flex: 1 0 0%;
    }

    .notices-table th:nth-child(3),
    .notices-table td:nth-child(3) {
        display: none;
    }

    .notices-table th:nth-child(4),
    .notices-table td:nth-child(4) {
        display: none;
    }

    .notices-table th:nth-child(5),
    .notices-table td:nth-child(5) {
        display: none;
    }

    .notices-table td,
    .notices-table th {
        vertical-align: top;
    }

    .notices-table td:nth-child(2) a {
        margin-bottom: 3px;
    }
}




@media all and (max-width: 575px) {
    .notices-table .mobile-info {
        display: flex;
        flex-wrap: wrap;
        opacity: .6;
    }
}


@media all and (min-width: 576px) {
    .notices-table .mobile-info {
        display: none;
    }
}

.notices-table .mobile-info span:not(:last-child) {
    margin-right: 10px;
}






.notices-table {
    position: relative;
}

.notices-table .empty-warning {
    position: absolute;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
}


.notices-table tr {
    border-bottom: 1px solid rgba(0, 0, 0, .1);
}

.notices-table tr:hover {
    cursor: pointer;
}

.notices-table tr th {
    white-space: nowrap;
}

.notices-table tr td,
.notices-table tr th {
    text-align: center;
}



@media all and (max-width: 575px) {
    .notices-table tr td,
    .notices-table tr th {
        padding-top: 10px;
        padding-bottom: 10px;
    }
}

@media all and (min-width: 576px) {
    .notices-table tr td,
    .notices-table tr th {
        padding-top: 12.5px;
        padding-bottom: 12.5px;
    }
}
/* 
.notices-table tr td {
    position: relative;
}
 */





.notices-table tr td .post-title {
    font-weight: 600;
    color: #242529;
    transition: all ease-in-out .3s;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    /* text-align: center; */
}



.notices-table tr td .post-title a {
    color: #242529;
}



.notices-table tr:hover td .post-title {
    color: #FB9B51;
}


.notices-table tr td .post-download path {
    fill: #5F9FFF;
    transition: all ease-in-out .3s;
}

.notices-table tr:hover td .post-download path {
    fill: #0148FF;
}

.notices-table .post-date,
.notices-table .post-author {
    white-space: nowrap;
}



@media all and (max-width: 575px) {

    .notices .post-icon,
    .notices .post-title,
    .notices .post-download,
    .notices .post-author {
        padding-right: 10px;
    }
}


@media all and (min-width: 576px) and (max-width: 767px) {

    .notices .post-icon,
    .notices .post-title,
    .notices .post-author,
    .notices .post-download,
    .notices .post-number {
        padding-right: 12.5px;
    }
}




@media all and (max-width: 991px) {
    .pagination {
        padding: 0px 4% 30px 4%;
    }
}