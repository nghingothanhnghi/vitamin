/**/



section {
    background: #000;
}


.main-header{
    background: #000;
}


.slide-text {
    width: 92%;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
}





@media all and (max-width: 991px) {
	.slide-text {
        position: absolute;
        left: 20px;
        bottom: 20%;
        z-index: 2;
        width:70%;
    }    
    .featured-slider{
        margin-top:-75px;
    }
}

@media all and (min-width: 992px) {
	.slide-text .text {
        position: absolute;
        z-index: 2;
        top: 50%;
        transform: translateY(-50%);
        width: 600px;
    }
    .featured-slider{
        margin-top:-100px;
    }
}










.slide-text h2 {
    color: #fff;
    font-weight: 600;
}


.slide-text h2 span {
    display: block;
}



@media all and (max-width: 575px) {
    .slide-text h2 {
        margin-bottom: 11px;
    }

    .slide-text h2 span:first-child {
        font-size: 38px;
    }

    .slide-text h2 span:last-child {
        font-size: 21px;
    }
}

@media all and (min-width: 576px) and (max-width: 767px) {
    .slide-text h2 {
        margin-bottom: 14px;
    }

    .slide-text h2 span:first-child {
        font-size: 46px;
    }

    .slide-text h2 span:last-child {
        font-size: 24px;
    }
}

@media all and (min-width: 768px) and (max-width: 991px) {
    .slide-text h2 {
        margin-bottom: 17px;
    }

    .slide-text h2 span:first-child {
        font-size: 50px;
    }

    .slide-text h2 span:last-child {
        font-size: 27px;
    }
}

@media all and (min-width: 992px) {
    .slide-text h2 {
        margin-bottom: 20px;
    }

    .slide-text h2 span:first-child {
        font-size: 60px;
        line-height: 1;
    }

    .slide-text h2 span:last-child {
        font-size: 40px;
        font-weight: 500;
    }
}







.slide-text p {
    color: rgba(255,255,255,0.7);
    font-weight: 400;
    font-size: 18px;
    position: relative;
    word-break: keep-all;
}
.slide-text p::before{
    content: "";
    display: block;
    width: 40px;
    height: 1px;
    background: #fff;
    margin: 50px 0;
}

@media all and (max-width: 575px) {
    .slide-text p {
        margin-bottom: 25px;
        font-size: 14px;;
    }
    .slide-text p::before{
        margin: 20px 0;
    }
}

@media all and (min-width: 576px) and (max-width: 767px) {
    .slide-text p {
        margin-bottom: 30px;
    }
}

@media all and (min-width: 768px) and (max-width: 991px) {
    .slide-text p {
        margin-bottom: 35px;
    }
}

@media all and (min-width: 992px) {
    .slide-text p {
        margin-bottom: 40px;
    }
}


















.slide-img {
    position: absolute;
    top: 0;
    left: 50%;
    margin-left:-50%;
    height: 100%;
    width: auto;
    z-index: 1;
}





@media all and (max-width: 575px) {
	.slide-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
}


@media all and (min-width: 576px) and (max-width: 767px) {
	.slide-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
}


@media all and (min-width: 768px) and (max-width: 991px) {
	.slide-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
}


@media all and (min-width: 992px) {
	.slide-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
}



















.featured-slider .slide {
    position: relative;
}


@media all and (max-width: 575px) {
    .featured-slider .slide {
        height: calc(100vh - 70px);
        max-height: 450px;
    }
}


@media all and (min-width: 576px) and (max-width: 767px) {
    .featured-slider .slide {
        height: calc(100vh - 75px);
        max-height: 550px;
    }
}


@media all and (min-width: 768px) and (max-width: 991px) {
    .featured-slider .slide {
        height: calc(100vh - 80px);
        max-height: 680px;
    }
}


@media all and (min-width: 992px) {
    .featured-slider .slide {
        height: calc(100vh - 110px);
        max-height: 800px;
    }
}