                </tr>
                <tr>
                    <td>7월</td>
                    <td style="text-align: center;">{{ item.mon7 | setComma }}{{ showUnit? '원' : '' }}</td>
                </tr>
                <tr>
                    <td>8월</td>
                    <td style="text-align: center;">{{ item.mon8 | setComma }}{{ showUnit? '원' : '' }}</td>
                </tr>
                <tr>
                    <td>9월</td>
                    <td style="text-align: center;">{{ item.mon9 | setComma }}{{ showUnit? '원' : '' }}</td>
                </tr>
                <tr>
                    <td>10월</td>
                    <td style="text-align: center;">{{ item.mon10 | setComma }}{{ showUnit? '원' : '' }}</td>
                </tr>
                <tr>
                    <td>11월</td>
                    <td style="text-align: center;">{{ item.mon11 | setComma }}{{ showUnit? '원' : '' }}</td>
                </tr>
                <tr>
                    <td>12월</td>
                    <td style="text-align: center;">{{ item.mon12 | setComma }}{{ showUnit? '원' : '' }}</td>
                </tr>
            </tbody>
            <grid-no-data-mobile [items]="items"></grid-no-data-mobile>
        </table>

        <!-- pagination desktop -->
        <paging
            [len]="len"
            [page]="page"
            [config]="config"
            [totalItems]="totalItems"
            (changePage)="onChangePage($event)"
            (changeLen)="onChangeLen($event)"
            [turnOnLenOptions]="true"
            [turnOnPagination]="true"
            [turnOnTotalItem]="true"
            [isMobile]="false"
        ></paging>

